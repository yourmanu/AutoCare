@model ApplicationUserModel
@using AutoCare.Utility
@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Customer Detail</h4>
            <hr />
            <fieldset disabled>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                @if (User.IsInRole(SD.AdminEndUser))
                {
                    <div class="form-group">
                        <label asp-for="IsAdmin"></label>
                        <input asp-for="IsAdmin" class="checkbox" />
                    </div>
                }
            </fieldset>
            @if (User.IsInRole(SD.AdminEndUser))
            {
                <div class="form-group">
                    <a asp-action="Edit" asp-route-Id=@Model.Id class="btn btn-sm btn-success">Edit</a>
                    <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
                </div>
            }
            else
            {
                <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
            }


        </form>
    </div>
</div>

