@model AutoCare.Models.ServiceType
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Service Type</h2>
<br />
<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" asp-route-ServicetypeId="@Model.ServicetypeId" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>


